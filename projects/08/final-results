require "./temperature.rb"   

def temp_tester
  
   puts "Enter baseTemp: "
   baseTemp = Weather::Temperature.read()

   puts "Enter limitTemp: "
   limitTemp = Weather::Temperature.read()

   puts "Enter stepValue: "
